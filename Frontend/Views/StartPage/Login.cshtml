@model Frontend.Models.Login;

@{
    ViewData["Title"] = "Home Page";
    Layout = "_StartPageLayout";
}

<div class="bgBlur">
    <div class=wrapper>

        <div class="welcomeTextPo"></div>
        <div class="welcomeTextBg">

            <div class="welcomeText">
                ยินดีต้อนรับเข้าสู่เว็ปไซต์สำหรับจองอุปกรณ์
            </div>
        </div>
        <div class="description" style="white-space: pre">

            เว็ปไซต์นี้จัดทำขึ้นสำหรับจองอุปกรณ์ห้องแลป
            ของสถาบันเทคโนโลยีพระจอมเกล้าเจ้าคุณทหารลาดกระบัง
            รายวิชา 01076025 Software Studio

        </div>
        <div class="buttonArea">
            <button class="startButton" id="getStart" onclick="showLogin()"> เริ่มต้นใช้งาน </button>
        </div>
    </div>
</div>


<div class="blackground">
    <div class="loginPage" id="loginPage">

        <a class="closeRegisterPage" asp-controller="StartPage" asp-action="Index">X</a>
        <div class="loginTitle">
            เข้าสู่ระบบ
        </div>
        <form class="loginPopup" method="post" asp-action="Login">
            <label for="email">อีเมล</label>

            <input asp-for="email" type="text" id="email" name="email">
            <div class="spanSpace">
                <span asp-validation-for="email" class="spanValidation"></span>
            </div>
            <label for="password">รหัสผ่าน</label>
            <input asp-for="password" type="password" id="password" name="password">
            <div class="spanSpace">
                <span asp-validation-for="password" class="spanValidation"></span>
            </div>


            <div class="loginToRegister">
                <div class="text1"> ไม่มีบัญชีผู้ใช้ ? </div>
                <a class="text2" asp-controller="StartPage" asp-action="Register">สมัครสมาชิก</a>
            </div>
            <div class="spanSpace">
                <div asp-validation-summary="ModelOnly" class="divValidation"></div>
            </div>
            <div class="loginButtonArea">
                <button class="loginButton">เข้าสู่ระบบ</button>
            </div>

        </form>

    </div>
</div>
